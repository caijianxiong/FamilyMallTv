<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_1080p_830px"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg02"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_1080p_30px"
        android:layout_marginTop="@dimen/dp_1080p_104px"
        android:layout_marginRight="@dimen/dp_1080p_30px"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_1080p_42px"
        android:visibility="visible" />

    <TextView
        android:id="@+id/message02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_1080p_30px"
        android:layout_marginTop="@dimen/dp_1080p_40px"
        android:layout_marginRight="@dimen/dp_1080p_30px"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_1080p_30px"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1080p_60px"
        android:layout_marginBottom="@dimen/dp_1080p_100px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="@dimen/dp_1080p_174px"
            android:layout_height="@dimen/dp_1080p_66px"
            android:background="@drawable/selector_btn_yellow"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/dialog_yes"
            android:textColor="@drawable/text_color_focus_selector02"
            android:textSize="@dimen/sp_1080p_30px" />

        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="@dimen/dp_1080p_174px"
            android:layout_height="@dimen/dp_1080p_66px"
            android:layout_marginLeft="@dimen/dp_1080p_70px"
            android:background="@drawable/selector_btn_yellow"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/dialog_no"
            android:textColor="@drawable/text_color_focus_selector02"
            android:textSize="@dimen/sp_1080p_30px" />
    </LinearLayout>

</LinearLayout>