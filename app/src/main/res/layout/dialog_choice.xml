<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dp_1080p_1200px"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center"
    android:padding="@dimen/dp_1080p_40px"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="确定退出视频"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_1080p_50px"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="message"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_1080p_40px"
        android:textSize="@dimen/sp_1080p_40px"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_1080p_40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_1080p_20px"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/positiveButton"
            android:layout_width="@dimen/dp_1080p_240px"
            android:layout_height="wrap_content"
            style="@style/main2_button"
            android:gravity="center"
            android:layerType="software"
            android:text="@string/dialog_yes" />

        <Button
            android:id="@+id/negativeButton"
            style="@style/main2_button"
            android:layout_width="@dimen/dp_1080p_240px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_1080p_70px"
            android:gravity="center"
            android:layerType="software"
            android:text="@string/dialog_no" />
    </LinearLayout>

</LinearLayout>