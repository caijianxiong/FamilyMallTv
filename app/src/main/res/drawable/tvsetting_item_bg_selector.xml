<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选中效果-->
    <item android:state_focused="true" >
        <shape android:shape="rectangle" >
            <stroke android:width="@dimen/dp_1080p_2px" android:color="#ffae00"/>
            <solid android:color="@color/white_10_transparent"/>
            <corners android:radius="@dimen/dp_1080p_10px" />
        </shape>
    </item>
    <!--默认效果-->
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/black_10_transparent"/>
            <corners android:radius="@dimen/dp_1080p_10px" />
        </shape>
    </item>

</selector>