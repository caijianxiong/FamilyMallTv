<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选中效果-->
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/black_80_transparent" />
            <corners android:radius="@dimen/dp_1080p_4px"/>
            <stroke android:width="@dimen/dp_1080p_2px" android:color="@color/yellofff503" />
        </shape>
    </item>
    <!--默认效果-->
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/black_80_transparent" />
            <corners android:radius="@dimen/dp_1080p_4px"/>
            <stroke android:width="@dimen/dp_1080p_2px" android:color="@color/white_50_transparent" />
        </shape>
    </item>

</selector>