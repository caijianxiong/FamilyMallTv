<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape >
            <stroke android:color="@color/yellofff503" android:width="@dimen/dp_1080p_4px" />
            <solid android:color="@color/yellofff503"/>
            <corners android:radius="@dimen/dp_1080p_16px"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape >
            <stroke android:color="@color/transparent" android:width="@dimen/dp_1080p_4px" />

            <solid android:color="@color/transparent"/>
            <corners android:radius="@dimen/dp_1080p_16px"/>
        </shape>
    </item>

</selector>