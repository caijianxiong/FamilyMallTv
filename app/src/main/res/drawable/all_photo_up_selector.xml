<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_20_transparent"/>
            <corners android:radius="@dimen/dp_1080p_36px"/>
            <stroke android:color="@color/focus_selected" android:width="@dimen/dp_1080p_2px"/>
        </shape>
    </item>


    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_20_transparent"/>
            <corners android:radius="@dimen/dp_1080p_36px"/>
            <stroke android:color="@color/transparent" android:width="@dimen/dp_1080p_2px"/>
        </shape>
    </item>

</selector>