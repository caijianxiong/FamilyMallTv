<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <solid android:color="#f5f5f5" />
            <stroke android:width="@dimen/dp_1080p_2px" android:color="@color/yellofff503" />
            <corners android:radius="@dimen/dp_1080p_30px" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/yellofff503" />
            <stroke android:width="@dimen/dp_1080p_2px" android:color="@color/yellofff503" />
            <corners android:radius="@dimen/dp_1080p_30px" />
        </shape>
    </item>


    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="#f5f5f5" />
            <solid android:color="@color/yellofff503" />
            <stroke android:width="@dimen/dp_1080p_2px" android:color="#666666" />
            <corners android:radius="@dimen/dp_1080p_30px" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="#f5f5f5" />
            <stroke android:width="@dimen/dp_1080p_2px" android:color="#666666" />
            <corners android:radius="@dimen/dp_1080p_30px" />
        </shape>
    </item>

</selector>