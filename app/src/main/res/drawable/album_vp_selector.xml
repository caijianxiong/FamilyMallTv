<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选中效果-->
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="0dp"/>
            <stroke android:width="@dimen/dp_1080p_4px" android:color="@color/yelloffe300" />
        </shape>
    </item>
    <!--默认效果-->
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="0dp"/>
            <stroke android:width="@dimen/dp_1080p_4px" android:color="@color/transparent" />
        </shape>
    </item>

</selector>