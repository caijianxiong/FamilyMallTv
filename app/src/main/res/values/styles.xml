    <style name="SettingTvNameImgStyle">
        <item name="android:layout_width">@dimen/dp_1080p_46px</item>
        <item name="android:layout_height">@dimen/dp_1080p_46px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dp_1080p_40px</item>
        <item name="android:src">@drawable/tvname_item_img_selector</item>
    </style>
    <!--设置界面 end-->

    <style name="clubDialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <!--个人名片-->
    <style name="BusinesscardMarkStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_1080p_30px</item>
        <item name="android:layout_marginBottom">@dimen/dp_1080p_2px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_1080p_30px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/sp_1080p_20px</item>
        <item name="android:paddingRight">@dimen/sp_1080p_20px</item>
    </style>
    <style name="BusinesscardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/sp_1080p_30px</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle"  parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <!--dialog 显示消失动画-->
    <style name="MyDialogAnimStyle"  parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>


    <style name="DialogSlidRightStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_right_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_right_slide_out</item>
    </style>

    <style name="DialogSlidBottomStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_out</item>
    </style>


    <style name="DialogSlidRightAnimStyle" parent="android:style/Theme.Dialog">
        <!--内容区域背景色-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--dialog动画-->
        <item name="android:windowAnimationStyle">@style/DialogSlidRightStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--设置弹窗全屏背景是否变暗-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="DialogSlidBottomAnimStyle" parent="android:style/Theme.Dialog">
        <!--内容区域背景色-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--dialog动画-->
        <item name="android:windowAnimationStyle">@style/DialogSlidBottomStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--设置弹窗全屏背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>



    <style name="Dialog" parent="android:style/Theme.Dialog">
        <!--内容区域背景色-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--dialog动画-->
        <!--<item name="android:windowAnimationStyle">@style/MyDialogAnimStyle</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--设置弹窗全屏背景是否变暗-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>


    <style name="MyToast" parent="Base.Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/enter_alpha</item>
        <item name="android:windowExitAnimation">@anim/out_alpha</item>
    </style>

    <style name="SettingSelectTextStyle">
        <item name="android:layout_width">@dimen/dp_1080p_244px</item>
        <item name="android:layout_height">@dimen/dp_1080p_44px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dp_1080p_40px</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:background">@drawable/tvsetting_btn_bg_selector</item>
        <item name="android:textColor">@drawable/tvsetting_text_color_selector</item>
        <item name="android:textSize">@dimen/sp_1080p_34px</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
